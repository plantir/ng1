    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",

            "name": "nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/bin/demo.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "args": [
                "g", "s", "user/services/login"
            ],
            "name": "Launch Program",
            "program": "${workspaceFolder}\\bin\\demo.js"
        }
    ]
}